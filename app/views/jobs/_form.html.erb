<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  <%= link_to "Add new category", new_category_path %>

  <%= f.submit %>
<% end %>
